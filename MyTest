import org.springframework.scheduling.annotation.Async;
import org.springframework.stereotype.Service;

import javax.annotation.PostConstruct;
import java.net.DatagramPacket;
import java.net.DatagramSocket;

@Service
public class UdpListenerService {

    @PostConstruct
    public void init() {
        startUdpListener(9876); // Automatically start on initialization
    }

    @Async
    public void startUdpListener(int port) {
        try (DatagramSocket socket = new DatagramSocket(port)) {
            System.out.println("UDP Listener started on port " + port);
            byte[] buffer = new byte[1024];
            while (true) {
                DatagramPacket packet = new DatagramPacket(buffer, buffer.length);
                socket.receive(packet); // Blocking call to receive data

                String receivedData = new String(packet.getData(), 0, packet.getLength());
                System.out.println("Received UDP packet: " + receivedData);
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
