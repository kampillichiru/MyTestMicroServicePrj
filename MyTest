import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.context.annotation.Configuration;
import java.util.List;

@Configuration
@ConfigurationProperties(prefix = "file")
public class FileMappingConfig {

    private List<FileMapping> mappings;

    public List<FileMapping> getMappings() {
        return mappings;
    }

    public void setMappings(List<FileMapping> mappings) {
        this.mappings = mappings;
    }

    public FileMapping getMappingByOldName(String oldName) {
        return mappings.stream()
                .filter(m -> m.getOldName().equalsIgnoreCase(oldName))
                .findFirst()
                .orElse(null);
    }
}


file:
  mappings:
    - oldName: KPTR8392.V20
      newName: EPTR8392.V20
      scheduler: com.example.scheduler.MySchedulerClass
    - oldName: ABC1234.V01
      newName: XYZ5678.V01
      scheduler: com.example.scheduler.AnotherScheduler


public class FileMapping {
    private String oldName;
    private String newName;
    private String scheduler;

    public String getOldName() {
        return oldName;
    }

    public void setOldName(String oldName) {
        this.oldName = oldName;
    }

    public String getNewName() {
        return newName;
    }

    public void setNewName(String newName) {
        this.newName = newName;
    }

    public String getScheduler() {
        return scheduler;
    }

    public void setScheduler(String scheduler) {
        this.scheduler = scheduler;
    }
}
