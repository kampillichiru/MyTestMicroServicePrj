import com.fasterxml.jackson.dataformat.xml.XmlMapper;


public class JacksonXmlGenerator {

    public String createXmlRequest() throws Exception {
        Envelope envelope = new Envelope();
        Envelope.Body body = new Envelope.Body();
        Envelope.Body.TestEdition testEdition = new Envelope.Body.TestEdition();
        testEdition.setVersion("1.0");
        testEdition.setTest("Some value");
        body.setTestEdition(testEdition);

        envelope.setBody(body);

        XmlMapper xmlMapper = new XmlMapper();
        return xmlMapper.writerWithDefaultPrettyPrinter().writeValueAsString(envelope);
    }
}


import com.fasterxml.jackson.annotation.JsonProperty;
import com.fasterxml.jackson.dataformat.xml.annotation.JacksonXmlRootElement;

@JacksonXmlRootElement(localName = "Envelope", namespace = "http://schemas.xmlsoap.org/soap/envelope/")
public class Envelope {

    private Header header;
    private Body body;

    @JsonProperty("Header")
    public Header getHeader() {
        return header;
    }

    public void setHeader(Header header) {
        this.header = header;
    }

    @JsonProperty("Body")
    public Body getBody() {
        return body;
    }

    public void setBody(Body body) {
        this.body = body;
    }

    public static class Header {
        // Define Header fields if needed
    }

    public static class Body {
        private TestEdition testEdition;

        @JsonProperty("testEdition")
        public TestEdition getTestEdition() {
            return testEdition;
        }

        public void setTestEdition(TestEdition testEdition) {
            this.testEdition = testEdition;
        }

        public static class TestEdition {
            private String version;
            private String testEdition;

            @JsonProperty("version")
            public String getVersion() {
                return version;
            }

            public void setVersion(String version) {
                this.version = version;
            }

            @JsonProperty(testEdition)
            public String getTestEdition() {
                return testEdition;
            }

            public void settestEdition(String testEdition) {
                this.testEdition = testEdition;
            }
        }
    }
}
